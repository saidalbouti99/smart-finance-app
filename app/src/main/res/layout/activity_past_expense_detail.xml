<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/neumorphism"
    tools:context=".PastIncomeDetailActivity">

    <soup.neumorphism.NeumorphCardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/neumorphism">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/neumorphism">

            <soup.neumorphism.NeumorphCardView
                android:id="@+id/card1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:paddingLeft="10dp"
                    android:src="@drawable/ic_ic_actions_bookmarks" />

                <TextView
                    android:id="@+id/tv_cat_past_expense_details"
                    style="@style/Bold"
                    android:layout_width="300dp"
                    android:layout_height="60dp"
                    android:background="@android:color/transparent"
                    android:paddingStart="50dp"
                    android:paddingLeft="120dp"
                    android:paddingTop="20dp"
                    android:paddingEnd="20dp"
                    android:paddingRight="20dp"
                    android:paddingBottom="20dp"
                    android:text="Category"
                    android:textColor="@color/text_color_primary"></TextView>
            </soup.neumorphism.NeumorphCardView>

            <soup.neumorphism.NeumorphCardView
                android:id="@+id/card2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/card1">

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:paddingLeft="10dp"
                    android:src="@drawable/ic_ic_ecommerce_money" />

                <TextView
                    android:id="@+id/tv_amount_past_expense_details"
                    style="@style/Bold"
                    android:layout_width="300dp"
                    android:layout_height="60dp"
                    android:background="@android:color/transparent"
                    android:paddingStart="50dp"
                    android:paddingLeft="120dp"
                    android:paddingTop="20dp"
                    android:paddingEnd="20dp"
                    android:paddingRight="20dp"
                    android:paddingBottom="20dp"
                    android:text="Amount"
                    android:textColor="@color/text_color_primary"></TextView>
            </soup.neumorphism.NeumorphCardView>

            <soup.neumorphism.NeumorphCardView
                android:id="@+id/card3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/card2">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:paddingLeft="10dp"
                    android:src="@drawable/ic_ic_actions_calendar" />

                <TextView
                    android:id="@+id/tv_date_past_expense_details"
                    style="@style/Bold"
                    android:layout_width="300dp"
                    android:layout_height="60dp"
                    android:background="@android:color/transparent"
                    android:paddingStart="50dp"
                    android:paddingLeft="120dp"
                    android:paddingTop="20dp"
                    android:paddingEnd="20dp"
                    android:paddingRight="20dp"
                    android:paddingBottom="20dp"
                    android:text="Date"
                    android:textColor="@color/text_color_primary"></TextView>
            </soup.neumorphism.NeumorphCardView>

            <soup.neumorphism.NeumorphCardView
                android:id="@+id/card4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/card3">

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:paddingLeft="10dp"
                    android:src="@drawable/ic_ic_contact_edit" />

                <TextView
                    android:id="@+id/tv_notes_past_expense_details"
                    style="@style/Bold"
                    android:layout_width="300dp"
                    android:layout_height="60dp"
                    android:background="@android:color/transparent"
                    android:paddingStart="50dp"
                    android:paddingLeft="120dp"
                    android:paddingTop="20dp"
                    android:paddingEnd="20dp"
                    android:paddingRight="20dp"
                    android:paddingBottom="20dp"
                    android:text="Notes"
                    android:textColor="@color/text_color_primary"></TextView>
            </soup.neumorphism.NeumorphCardView>

            <soup.neumorphism.NeumorphCardView
                android:id="@+id/card5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/card4">

                <soup.neumorphism.NeumorphImageView
                    android:id="@+id/img_receipt_past_expense_details"
                    android:layout_width="300dp"
                    android:layout_height="200dp"
                    android:paddingLeft="10dp" />

            </soup.neumorphism.NeumorphCardView>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </soup.neumorphism.NeumorphCardView>
</androidx.constraintlayout.widget.ConstraintLayout>