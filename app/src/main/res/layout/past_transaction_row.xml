<?xml version="1.0" encoding="utf-8"?>


<soup.neumorphism.NeumorphCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:padding="8dp">

        <soup.neumorphism.NeumorphTextView
            android:id="@+id/tv_cat_past_trans"
            style="@style/Bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:text="Category"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"></soup.neumorphism.NeumorphTextView>

        <soup.neumorphism.NeumorphTextView
            android:id="@+id/tv_date_past_trans"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Date"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@+id/tv_cat_past_trans"
            app:layout_constraintTop_toBottomOf="@+id/tv_cat_past_trans"></soup.neumorphism.NeumorphTextView>

        <soup.neumorphism.NeumorphTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="RM"
            app:layout_constraintEnd_toStartOf="@+id/tv_amount_past_trans"
            app:layout_constraintTop_toTopOf="@+id/tv_amount_past_trans"></soup.neumorphism.NeumorphTextView>

        <soup.neumorphism.NeumorphTextView
            android:id="@+id/tv_amount_past_trans"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="32dp"
            android:text="RM"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_cat_past_trans"></soup.neumorphism.NeumorphTextView>

        <soup.neumorphism.NeumorphTextView
            android:id="@+id/tv_notes_past_trans"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Notes"
            app:layout_constraintEnd_toEndOf="@+id/tv_amount_past_trans"
            app:layout_constraintTop_toBottomOf="@+id/tv_amount_past_trans"></soup.neumorphism.NeumorphTextView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</soup.neumorphism.NeumorphCardView>
